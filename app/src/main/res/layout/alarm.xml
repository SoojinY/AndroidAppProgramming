<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:background="@drawable/button_lightgray2"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:inputType="text"
        android:id="@+id/alarmNm"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="알람 이름"
        android:textColor="@color/darkGray1"
        android:textSize="13sp"
        android:textColorHint="@color/orange2"
        app:layout_constraintBottom_toTopOf="@id/alarmDt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/alarmDt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.11.29"
        android:textSize="11sp"
        android:textColor="@color/orange2"
        app:layout_constraintTop_toBottomOf="@id/alarmNm"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="30dp"/>

    <ImageView
        android:id="@+id/alarmDelete"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:src="@drawable/trash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="3dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>